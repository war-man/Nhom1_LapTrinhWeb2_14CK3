                                <input type="number" class="form-control" placeholder="Giá khuyến mãi" value="300000">
                            </div>
                            <div class="col-md-4 mar-btm">
                                <input type="number" class="form-control" placeholder="Số lượng" value="2">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mar-btm">
                                <span class="pull-left btn btn-default btn-file">Hình đại diện... <input type="file"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <textarea id="demo-textarea-input" rows="9" class="form-control" placeholder="Giới thiệu...">Sản phẩm đẹp</textarea>
                            </div>
                        </div>

                    </form>
                </div>

                <!--Modal footer-->
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-default" type="button">Đóng</button>
                    <button class="btn btn-primary">Lưu sản phẩm</button>
                </div>
            </div>
        </div>
