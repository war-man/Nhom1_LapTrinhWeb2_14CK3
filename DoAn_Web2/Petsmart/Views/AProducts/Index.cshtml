                    </button>
                    <h3 class="modal-title">Cập nhật sản phẩm</h3>
                </div>

                <!--Modal body-->
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-md-6 mar-btm">
                                <input type="text" class="form-control" placeholder="Tên sản phẩm" value="Chó Husky">
                            </div>
                            <div class="col-md-6 mar-btm">
                                <select class="selectpicker" data-live-search="true" data-width="100%" style="display: none;">
