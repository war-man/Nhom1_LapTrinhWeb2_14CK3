                            @{
                                foreach (var item in ViewData["lstDanhMuc"] as List<SanPham>)
                                {

                                    <div class="item">
                                        <div class="pro-img">
                                            <img src="~/Content/images/products/@item.HinhURL" alt="@item.TenSanPham">
