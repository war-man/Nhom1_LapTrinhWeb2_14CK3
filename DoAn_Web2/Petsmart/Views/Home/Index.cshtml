                                                </div >
                                                <div class="add_cart">
                                                    <button class="button btn-cart" type="button"><a href = "@Url.Action("Detail", "Products", new { id = @item.MaSanPham } )"><span>Xem chi tiết</span></a> </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                                                    }
                    <!-- End Item -->
                </div>
            </div>
        </div>
